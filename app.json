{
  "expo": {
    "scheme": "toyapp",
    "name": "Rare Toys",
    "slug": "toys",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo_toy.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo_toy.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow RareToys to access your camera",
          "microphonePermission": "Allow RareToys to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ]
  }
}
